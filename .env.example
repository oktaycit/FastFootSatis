# Public customer ordering policy
# none | dynamic_qr | nfc | hybrid
FASTFOOT_VERIFY_MODE=hybrid

# Dynamic QR token lifetime (seconds)
FASTFOOT_DYNAMIC_QR_TTL_SEC=900

# Session limits (seconds)
FASTFOOT_PUBLIC_SESSION_TTL_SEC=3600
FASTFOOT_PUBLIC_SESSION_SLIDE_SEC=900

# Abuse/risk policy
FASTFOOT_MAX_ITEMS_PER_ORDER=25
FASTFOOT_MAX_ITEM_QTY=20
FASTFOOT_MAX_ORDERS_PER_MIN=3

# Optional signing secret override
# FASTFOOT_QR_SECRET=change_me
